  "bugs": {
    "url": "https://github.com/ruvnet/agentic-flow/issues"
  },
  "homepage": "https://agentdb.ruv.io",
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "commander": "^12.1.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "tsx": "^4.19.2",
