# FastMCP Docker Configuration
# Copy to .env and customize as needed

# Server Configuration
NODE_ENV=production
FASTMCP_PORT=3000
DEBUG=

# Claude Flow Configuration
CLAUDE_FLOW_MEMORY_DIR=./.claude-flow/memory
CLAUDE_FLOW_SWARM_DIR=./.claude-flow/swarms

# Supabase Configuration (from main .env)
SUPABASE_PROJECT_ID=pklhxiuouhrcrreectbo
SUPABASE_URL=https://${SUPABASE_PROJECT_ID}.supabase.co
SUPABASE_ANON_KEY=

# MCP Server Settings
MCP_MAX_CONCURRENT=10
MCP_TIMEOUT=30000
MCP_AUTH_ENABLED=false
MCP_RATE_LIMIT_ENABLED=false
MCP_RATE_LIMIT_MAX=100
MCP_RATE_LIMIT_WINDOW=60000

# Tool Configuration
MEMORY_NAMESPACE_DEFAULT=default
MEMORY_TTL_DEFAULT=3600
SWARM_MAX_AGENTS=100
SWARM_TOPOLOGY_DEFAULT=mesh
SWARM_STRATEGY_DEFAULT=balanced

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
