# Agentic Flow - Claude Configuration Template
# Deploy with: MODEL_PROVIDER=anthropic ./docker/cloud-run/deploy.sh

# Provider Configuration
MODEL_PROVIDER=anthropic
MODEL_NAME=claude-3-5-sonnet-20241022

# Anthropic API Key (store in GCP Secret Manager)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Optional: E2B Sandboxes for code execution
E2B_API_KEY=your-e2b-api-key-here

# Agent Configuration
AGENTS_DIR=/app/.claude/agents
ENABLE_LOGGING=true
LOG_LEVEL=info

# Server Configuration
PORT=8080
NODE_ENV=production

# MCP Server Configuration
MCP_AUTO_START=true

# Memory and Coordination
ENABLE_MEMORY=true
MEMORY_TTL=86400
